{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules", ".vscode"],
    "ts-node": {
        "transpileOnly": true,
        "files": true
    }
}